@page
@model Student_MVC_App.Pages.CoursePage.DetailsModel

@{
    ViewData["Title"] = "Details orf Course";
}

<h1>Details of Course</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Lecturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Lecturer)
        </dd>
    </dl>
</div>
<h1>Students Enrolled</h1>
@if (Model.Course.Students != null && Model.Course.Students.Any())
{
    <ul>
        @foreach (var student in Model.Course.Students)
        {
            <li>
                <a asp-page="/StudentPage/Details" asp-route-id="@student.Id">
                    @student.Name
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No students are enrolled in this course.</p>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
