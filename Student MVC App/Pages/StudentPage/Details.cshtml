@page
@model Student_MVC_App.Pages.StudentPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Emailaddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Emailaddress)
        </dd>
    </dl>
</div>

@if (Model.Student.Courses != null && Model.Student.Courses.Any())
{
    <ul>
        @foreach (var course in Model.Student.Courses)
        {
            <li>
                <a asp-page="/CoursePage/Details" asp-route-id="@course.Id">
                    @course.Name
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No courses enrolled.</p>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
